# ---- Builder Stage ----
FROM golang:1.24-alpine AS builder

WORKDIR /app

# Copy Go modules and download dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy all source code
COPY . .

# ğŸ” Show files in users service directory
RUN echo "ğŸ“ Listing ./services/users:" && ls -lah ./services/users/

# ğŸ”¨ Build the binary and show verbose output
# RUN echo "ğŸ”¨ Running go build:" && \
#     CGO_ENABLED=0 GOOS=linux GOARCH=arm64 go build -a -v -o /main github.com/tagaertner/e-commerce-graphql/services/users && \
#     echo "âœ… Build complete!" && \
#     ls -lah /main || echo "â›”ï¸ /main still not found"


RUN echo "ğŸ”¨ Running go build:" && \
CGO_ENABLED=0 GOOS=linux GOARCH=arm64 go build -a -v -o /main ./services/users/main.go && \
echo "âœ… Build complete!" && \
ls -lah /main || echo "â›”ï¸ /main still not found"

# ---- Runtime Stage ----
FROM alpine:latest
WORKDIR /root/
COPY --from=builder /main .
RUN chmod +x /main
EXPOSE 4002
ENTRYPOINT ["/main"]